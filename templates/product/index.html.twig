{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-2">
            <h3>Filtrer</h3>
                {{ form(form) }}
        </div>
        <div class="col-md-10">
            <h3>Nos produits</h3>

            <div class="row product-container">
                {% for product in products %}

                    <div class="col-md-4">
                        <hr>
                        <div class="product-item text-center">
                            <a href="{{ path('product', {'slug': product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a><
                            <h5>{{ product.name }}</h5>
                            <span class="product-subtitle">{{ product.subtitle }}</span>
                            {% if app.user %}
                                <span class="product-price"><strong>{{(product.price / 100) | number_format(2) }} â‚¬</strong></span>
                            {% else %}
                                <span class="badge badge-primary">Pour voir les prix, veuillez vous inscrire svp</span>
                            {% endif %}
                            <hr>
                        </div>
                    </div>
                {% endfor%}
            </div>
        </div>
    </div>

{% endblock %}
