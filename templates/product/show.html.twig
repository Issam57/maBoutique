{% extends "base.html.twig" %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h1>{{ product.name }}</h1>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{(product.price / 100) | number_format(2) }} €</span>
            <hr style="background-color: #0000cc">
            <p>
                {{ product.description }}
            </p>
            <hr style="background-color: #0000cc">
            <a href="{{ path('add_cart', {'id': product.id}) }}" class="btn btn-primary mt-2">Ajouter au panier</a>
        </div>
    </div><br>
    <hr><br>
    <h3>Nos meilleurs ventes</h3>
    <p>Découvrez les articles les plus vendus</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->



{% endblock %}